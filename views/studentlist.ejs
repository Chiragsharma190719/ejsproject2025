<%- include('./base/header.ejs') %>
<%- include('./base/nav.ejs') %>
    <div class="container">
        <div class = "alert text-center bg-primary my-4" style="color: white">
            <marquee>
                <h5>Student List</h5>
            </marquee>
        </div>
    </div>
    <div class="container">
        <table class="table text-center">
            <thead>
                <tr>
                    <th>Student Image</th>
                    <th>Roll No.</th>
                    <th>Name</th>
                    <th>Father's Name</th>
                    <th>Course</th>
                    <th>Branch</th>
                    <th>Actions</th>
                    <th>Year Of Admission</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach((student)=> { %>
                    <tr>
                        <td><img src="<%= student.studentImage %>" width="50px" height="50px"></td>
                        <td><%= student.rollNo %></td>
                        <td><%= student.studentName %></td>
                        <td><%= student.fatherName %></td>
                        <td><%= student.course %></td>
                        <td><%= student.branch %></td>
                        <td>
                            <a href="/edit/student/page/<%= student._id %>" class="btn btn-warning">Edit</a>
                            <a href="delete/student/<%= student._id %>" class="btn btn-danger">Delete</a>
                        </td>
                        <td><%= student.yearOfAdmission %></td>
                    </tr>
                <% }) %>

            </tbody>
        </table>
    </div>
<%- include('./base/footer.ejs') %>