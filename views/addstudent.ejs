<%- include('./base/header.ejs') %>
    <%- include('./base/nav.ejs') %>
    <div class="container">
        <div class="alert text-center bg-primary my-3" style="color:white">
            <h5>Add Student</h5>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <form action="/add/student" method="post" enctype="multipart/form-data">
                    <div>
                        <label for="rollNo" class="form-label">Roll No</label>
                        <input id="rollNo" type="text" class="form-control" name="rollNo">
                    </div>
                    <div>
                        <label for="studentName" class="form-label">Student Name</label>
                        <input id="studentName" type="text" class="form-control" name="studentName">
                    </div>
                    <div>
                        <label for="fatherName" class="form-label">Father Name</label>
                        <input id="fatherName" type="text" class="form-control" name="fatherName">
                    </div>
                    <div>
                        <label for="course" class="form-label">Course</label><br>
                        <select id="course" name="course" class="form-control">
                            <option value="" disabled selected>Select a course</option>
                            <option value="B-Tech">B-Tech</option>
                            <option value="M-Tech">M-Tech</option>
                            <option value="PhD">PhD</option>
                            <option value="BBA">BBA</option>
                            <option value="MBA">MBA</option>
                            <option value="B.Com">B.Com</option>
                            <option value="M.Com">M.Com</option>
                        </select>
                    </div>
                    <div>
                        <label for="branch" class="form-label">Branch</label><br>
                        <select id="branch" name="branch" class="form-control">
                            <option value="" disabled selected>Select a branch</option>
                            <option value="CSE">CSE</option>
                            <option value="ME">ME</option>
                            <option value="EE">EE</option>
                            <option value="Civil">Civil</option>
                            <option value="IT">IT</option>
                            <option value="ECE">ECE</option>
                            <option value="BioTech">BioTech</option>
                            <option value="Pharm">B.Pharm</option>
                        </select>
                    </div>
                    <div>
                        <label for="yearOfAdmission" class="form-label">Admission Year</label>
                        <input id="yearOfAdmission" type="date" class="form-control" name="yearOfAdmission">
                    </div>
                    <div>
                        <label for="studentImage" class="form-label">Student Image</label>
                        <input id="studentImage" type="file" class="form-control" name="studentImage">
                    </div>
                    <input type="submit" value="Add Student" class="btn btn-warning w-100 my-3">
                </form>
            </div>
            <div class=" col ">
                  <div class="d-flex justify-content-center align-items-center" style="height: 65vh">
            <img src="https://media.licdn.com/dms/image/v2/D4E0BAQEwqT9FTq_atA/company-logo_200_200/company-logo_200_200/0/1722238025392/rd_engineering_college_logo?e=2147483647&v=beta&t=Ju80M_wJg8LjJ-ATb_G8KkqRmhRfdAvFG0un1wwej4M" alt="College Logo Placeholder" class="w-75 h-auto rounded-xl">
        </div>
            </div>
        </div>
    </div>
<%- include('./base/footer.ejs') %>